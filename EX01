package main

import (
	"bufio"
	"fmt"
	"os"
)

//Escreva um programa que receba uma string
//E converta todas as letras minúsculas para maiúsculas.
//Informe ao usuário o resultado.

func main() {
	var frase string
	scanner := bufio.NewScanner(os.Stdin)

	fmt.Println("Digite uma frase apena com letras minúsculas")
	scanner.Scan()
	frase = scanner.Text()

	for i := 0; i < len(frase); i++ {
		if frase[i] == 8 {
			return
		}
		frase2 := frase[i] - 32
		fmt.Print(string(frase2))
	}

}
