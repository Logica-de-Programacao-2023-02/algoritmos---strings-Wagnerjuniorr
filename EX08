package main

import (
	"bufio"
	"fmt"
	"os"
)

//Escreva um programa que receba uma string e inverta a ordem dos caracteres.
//Informe ao usuário o resultado.

func main() {
	var frase2, frase string
	var i int
	scanner := bufio.NewScanner(os.Stdin)

	fmt.Println("Digite uma frase qualquer")
	scanner.Scan()
	frase = scanner.Text()

	for i = len(frase); i >= 0; i-- {
		frase[i] = frase2[i]

	}
	fmt.Println("A sua frase invertida ficará:", frase2)
}
